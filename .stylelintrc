{
    "extends": [
        "stylelint-config-recommended",
        "stylelint-config-sass-guidelines",
        "stylelint-a11y/recommended",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-scss"
    ],
    "rules": {
        "max-nesting-depth": 2,
        "declaration-no-important": true,
        "font-weight-notation": "named-where-possible"
    }
}